{
    "manifest_version": 3,
    "name": "Kampus Fixer",
    "description": "This extension hides the menu that pops up every time you choose text in Kampus.",
    "version": "0.0.6",
    "icons": {
    "16": "icons/kafi_16.png",
    "48": "icons/kafi_48.png",
    "128": "icons/kafi_128.png"
    },
    "action": {
        "default_icon": "icons/kafi_128.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://kampus.sanomapro.fi/*"
            ],
            "js": [
                "kafi.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "kafi@kafi.com",
            "strict_min_version": "58.0"
        }
    }
}